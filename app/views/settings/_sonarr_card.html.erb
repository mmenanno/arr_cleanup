<%# This partial can be rendered with a form builder (f) or with app_setting passed as local
  app_setting ||= defined?(f) && f ? f.object : nil %>
<div id="sonarr-card" class="relative overflow-hidden rounded-xl bg-gradient-to-br from-purple-500/10 via-indigo-500/10 to-blue-500/10 border border-purple-500/20">
  <div class="p-8">
    <div class="flex items-start justify-between mb-6">
      <div class="flex items-center gap-3">
        <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-purple-600/20 border border-purple-500/30">
          <svg class="h-6 w-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.125-3h17.25c.621 0 1.125-.504 1.125-1.125V4.875c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125z" />
          </svg>
        </div>
        <div>
          <h3 class="text-xl font-bold text-white">Sonarr</h3>
          <div class="flex items-center gap-2 mt-1">
            <% if app_setting.sonarr_url.present? && app_setting.sonarr_api_key.present? %>
              <span class="inline-flex items-center gap-1 rounded-md bg-green-500/20 px-2 py-0.5 text-xs font-bold text-green-300 ring-1 ring-inset ring-green-500/30">
                <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                CONFIGURED
              </span>
            <% else %>
              <span class="inline-flex items-center gap-1 rounded-md bg-yellow-500/20 px-2 py-0.5 text-xs font-bold text-yellow-300 ring-1 ring-inset ring-yellow-500/30">
                NOT CONFIGURED
              </span>
            <% end %>
            <% if app_setting.sonarr_last_synced_at.present? %>
              <span class="text-xs text-gray-400">Last synced <%= time_ago_in_words(app_setting.sonarr_last_synced_at) %> ago</span>
            <% end %>
          </div>
        </div>
      </div>
      <% if app_setting.sonarr_url.present? && app_setting.sonarr_api_key.present? %>
        <button type="button"
                data-action="click->modal#show"
                data-confirm-message="Are you sure you want to clear Sonarr credentials?"
                data-confirm-url="<%= clear_sonarr_credentials_settings_path %>"
                data-confirm-method="delete"
                class="inline-flex items-center gap-1.5 rounded-lg bg-red-600/20 border border-red-500/30 px-3 py-1.5 text-xs font-semibold text-red-300 hover:bg-red-600/30 transition-colors cursor-pointer">
          <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
          Clear Credentials
        </button>
      <% end %>
    </div>

    <% if defined?(f) && f %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= f.label(:sonarr_url, "Sonarr URL", class: "block text-sm font-semibold text-gray-300 mb-2") %>
          <%= f.text_field(
                :sonarr_url,
                id: "sonarr_url_field",
                class: "block w-full px-4 py-2.5 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:border-purple-500 focus:ring-1 focus:ring-purple-500 hover:border-gray-600 transition-colors text-sm",
                placeholder: "http://localhost:8989",
                autocomplete: "off",
              ) %>
        </div>

        <div>
          <%= f.label(:sonarr_api_key, "Sonarr API Key", class: "block text-sm font-semibold text-gray-300 mb-2") %>
          <%= f.password_field(
                :sonarr_api_key,
                id: "sonarr_api_key_field",
                class: "block w-full px-4 py-2.5 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:border-purple-500 focus:ring-1 focus:ring-purple-500 hover:border-gray-600 transition-colors text-sm",
                placeholder: app_setting.sonarr_api_key.present? ? "••••••••" : "Enter your API key",
                autocomplete: "new-password",
                data: { "1p_ignore": true, lpignore: true },
              ) %>
          <% if app_setting.sonarr_api_key.present? %>
            <p class="mt-1.5 text-xs text-gray-500">Leave blank to keep current key</p>
          <% end %>
        </div>
      </div>

      <div class="mt-6" data-controller="test-connection" data-test-connection-url-value="<%= test_sonarr_connection_settings_path %>" data-test-connection-url-field-value="sonarr_url_field" data-test-connection-key-field-value="sonarr_api_key_field">
        <button type="button"
              data-action="click->test-connection#test"
              class="inline-flex items-center gap-2 rounded-lg bg-purple-600 px-4 py-2.5 text-sm font-semibold text-white shadow-lg hover:bg-purple-500 transition-colors cursor-pointer">
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5.636 5.636a9 9 0 1012.728 0M12 3v9" />
          </svg>
          Test Connection
        </button>
      </div>
    <% else %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-semibold text-gray-300 mb-2">Sonarr URL</label>
          <input type="text"
                 id="sonarr_url_field"
                 value="<%= app_setting.sonarr_url %>"
                 class="block w-full px-4 py-2.5 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:border-purple-500 focus:ring-1 focus:ring-purple-500 hover:border-gray-600 transition-colors text-sm"
                 placeholder="http://localhost:8989"
                 autocomplete="off"
                 disabled>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-300 mb-2">Sonarr API Key</label>
          <input type="password"
                 id="sonarr_api_key_field"
                 value="<%= app_setting.sonarr_api_key.present? ? "••••••••" : "" %>"
                 class="block w-full px-4 py-2.5 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:border-purple-500 focus:ring-1 focus:ring-purple-500 hover:border-gray-600 transition-colors text-sm"
                 placeholder="<%= app_setting.sonarr_api_key.present? ? "••••••••" : "Enter your API key" %>"
                 autocomplete="off"
                 disabled>
          <% if app_setting.sonarr_api_key.present? %>
            <p class="mt-1.5 text-xs text-gray-500">Leave blank to keep current key</p>
          <% end %>
        </div>
      </div>

      <div class="mt-6">
        <div data-controller="test-connection" data-test-connection-url-value="<%= test_sonarr_connection_settings_path %>" data-test-connection-url-field-value="sonarr_url_field" data-test-connection-key-field-value="sonarr_api_key_field">
          <button type="button"
                data-action="click->test-connection#test"
                class="inline-flex items-center gap-2 rounded-lg bg-purple-600 px-4 py-2.5 text-sm font-semibold text-white shadow-lg hover:bg-purple-500 transition-colors cursor-pointer"
                disabled>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5.636 5.636a9 9 0 1012.728 0M12 3v9" />
            </svg>
            Test Connection
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
