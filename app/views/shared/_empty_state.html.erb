<%# locals: (icon_type:, title:, message:, action_text: nil, action_path: nil, action_method: "get") %>
<div class="text-center py-12 px-4">
  <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-700 mb-4">
    <%= empty_state_icon(icon_type) %>
  </div>
  <h3 class="text-lg font-medium text-white mb-2"><%= title %></h3>
  <p class="text-sm text-gray-400 mb-6 max-w-md mx-auto"><%= message %></p>
  <% if action_text.present? && action_path.present? %>
    <% if action_method == "post" %>
      <%= button_to action_text, action_path, method: :post, data: { turbo_stream: true }, class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
    <% else %>
      <%= link_to action_text, action_path, data: { turbo_frame: "_top" }, class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
    <% end %>
  <% end %>
</div>
