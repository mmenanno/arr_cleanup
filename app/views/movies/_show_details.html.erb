<%# locals: (movie:) %>
<div id="movie_details_<%= movie.id %>" class="space-y-8">
  <!-- Header Section -->
  <div class="relative overflow-hidden rounded-xl bg-gradient-to-br from-indigo-500/10 via-blue-500/10 to-cyan-500/10 p-8 border border-indigo-500/20">
    <div class="relative">
      <div class="flex justify-between items-start">
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-3">
            <svg class="h-10 w-10 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.375 19.5h17.25m-17.25 0a1.125 1.125 0 01-1.125-1.125M3.375 19.5h1.5C5.496 19.5 6 18.996 6 18.375m-3.75 0V5.625m0 12.75v-1.5c0-.621.504-1.125 1.125-1.125m18.375 2.625V5.625m0 12.75c0 .621-.504 1.125-1.125 1.125m1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125m0 3.75h-1.5A1.125 1.125 0 0118 18.375M20.625 4.5H3.375m17.25 0c.621 0 1.125.504 1.125 1.125M20.625 4.5h-1.5C18.504 4.5 18 5.004 18 5.625m3.75 0v1.5c0 .621-.504 1.125-1.125 1.125M3.375 4.5c-.621 0-1.125.504-1.125 1.125M3.375 4.5h1.5C5.496 4.5 6 5.004 6 5.625m-3.75 0v1.5c0 .621.504 1.125 1.125 1.125m0 0h1.5m-1.5 0c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125m1.5-3.75C5.496 8.25 6 7.746 6 7.125v-1.5M4.875 8.25C5.496 8.25 6 8.754 6 9.375v1.5m0-5.25v5.25m0-5.25C6 5.004 6.504 4.5 7.125 4.5h9.75c.621 0 1.125.504 1.125 1.125m1.125 2.625h1.5m-1.5 0A1.125 1.125 0 0118 7.125v-1.5m1.125 2.625c-.621 0-1.125.504-1.125 1.125v1.5m2.625-2.625c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125M18 5.625v5.25M7.125 12h9.75m-9.75 0A1.125 1.125 0 016 10.875M7.125 12C6.504 12 6 12.504 6 13.125m0-2.25C6 11.496 5.496 12 4.875 12M18 10.875c0 .621-.504 1.125-1.125 1.125M18 10.875c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125m-12 5.25v-5.25m0 5.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125m-12 0v-1.5c0-.621-.504-1.125-1.125-1.125M18 18.375v-5.25m0 5.25v-1.5c0-.621.504-1.125 1.125-1.125M18 13.125v1.5c0 .621.504 1.125 1.125 1.125M18 13.125c0-.621.504-1.125 1.125-1.125M6 13.125v1.5c0 .621-.504 1.125-1.125 1.125M6 13.125C6 12.504 5.496 12 4.875 12m-1.5 0h1.5m-1.5 0c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125M19.125 12h1.5m0 0c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h1.5m14.25 0h1.5" />
            </svg>
            <h1 class="text-4xl font-bold text-white"><%= movie.title %></h1>
          </div>

          <div class="flex flex-wrap items-center gap-3">
            <span class="text-lg text-gray-300"><%= movie.year %></span>

            <% if movie.ignored %>
              <span class="inline-flex rounded-full bg-gray-500/20 px-3 py-1 text-xs font-bold text-gray-300 ring-1 ring-inset ring-gray-500/30">IGNORED</span>
            <% end %>
          </div>
        </div>

        <%= render "movies/actions", movie: movie %>
      </div>
  </div>

  <!-- Stats Grid -->
  <div class="mt-2">
    <h2 class="text-xl font-bold text-white mb-4">Details</h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <!-- File Size -->
      <div class="bg-gray-800 rounded-xl p-5 border border-gray-700">
        <div class="flex items-center gap-2 mb-3">
          <svg class="h-5 w-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375" />
          </svg>
          <div class="text-xs font-medium text-gray-400 uppercase">Size</div>
        </div>
        <div class="text-2xl font-bold text-white"><%= format_bytes(movie.size_bytes) %></div>
      </div>

      <!-- Quality -->
      <div class="bg-gray-800 rounded-xl p-5 border border-gray-700">
        <div class="flex items-center gap-2 mb-3">
          <svg class="h-5 w-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
          </svg>
          <div class="text-xs font-medium text-gray-400 uppercase">Quality</div>
        </div>
        <div class="text-lg font-semibold text-white"><%= movie.quality %></div>
      </div>

      <!-- Quality Profile -->
      <div class="bg-gray-800 rounded-xl p-5 border border-gray-700">
        <div class="flex items-center gap-2 mb-3">
          <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <div class="text-xs font-medium text-gray-400 uppercase">Profile</div>
        </div>
        <div class="text-lg font-semibold text-white"><%= movie.quality_profile %></div>
      </div>

      <!-- Type -->
      <div class="bg-gray-800 rounded-xl p-5 border border-gray-700">
        <div class="flex items-center gap-2 mb-3">
          <% if movie.is_remux %>
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
          <% else %>
            <svg class="h-5 w-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          <% end %>
          <div class="text-xs font-medium text-gray-400 uppercase">Type</div>
        </div>
        <% if movie.is_remux %>
          <span class="inline-flex items-center gap-1.5 rounded-lg bg-red-500/20 px-3 py-1.5 text-sm font-bold text-red-300 ring-1 ring-inset ring-red-500/30">
            REMUX
          </span>
        <% else %>
          <span class="inline-flex items-center gap-1.5 rounded-lg bg-green-500/20 px-3 py-1.5 text-sm font-bold text-green-300 ring-1 ring-inset ring-green-500/30">
            STANDARD
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- File Path Section -->
  <div class="mt-2">
    <h2 class="text-xl font-bold text-white mb-4">File Location</h2>

    <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gray-700 border border-gray-600">
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
            </svg>
          </div>
        </div>
        <div class="flex-1 min-w-0">
          <div class="text-xs font-medium text-gray-400 uppercase mb-3">File Path</div>
          <code class="block text-sm text-gray-300 font-mono break-all bg-gray-900/50 p-4 rounded-lg leading-relaxed"><%= movie.file_path %></code>
        </div>
      </div>
    </div>
  </div>

  <% if movie.last_refreshed_at.present? %>
    <!-- Last Refreshed -->
    <div class="flex items-center gap-3 text-sm text-gray-400 mt-4">
      <svg class="h-5 w-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span>Last refreshed <span class="text-white font-medium"><%= time_ago_in_words(movie.last_refreshed_at) %> ago</span></span>
    </div>
  <% end %>
</div>

