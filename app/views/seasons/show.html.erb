<div class="space-y-8">
  <!-- Breadcrumb Navigation -->
  <div class="flex items-center gap-3 text-sm">
    <%= link_to shows_path, class: "inline-flex items-center gap-1.5 text-gray-400 hover:text-indigo-300 transition-colors cursor-pointer" do %>
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      <span>All Shows</span>
    <% end %>
    <svg class="h-4 w-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
    </svg>
    <%= link_to show_path(@show), class: "text-gray-400 hover:text-indigo-300 transition-colors cursor-pointer" do %>
      <%= @show.title %>
    <% end %>
    <svg class="h-4 w-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
    </svg>
    <span class="text-indigo-400 font-medium">Season <%= @season.season_number %></span>
  </div>

  <!-- Header Section -->
  <div class="relative overflow-hidden rounded-xl bg-gradient-to-br from-purple-500/10 via-indigo-500/10 to-blue-500/10 p-8 border border-purple-500/20">
    <div class="relative">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-4">
            <div class="flex items-center justify-center w-14 h-14 rounded-xl bg-purple-600 shadow-lg">
              <span class="text-2xl font-bold text-white"><%= @season.season_number %></span>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-400"><%= @show.title %></div>
              <h1 class="text-4xl font-bold text-white">Season <%= @season.season_number %></h1>
            </div>
          </div>

          <div class="flex flex-wrap items-center gap-3 mt-4">
            <div class="flex items-center gap-2 bg-gray-900/50 rounded-lg px-4 py-2">
              <svg class="h-5 w-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.375 19.5h17.25m-17.25 0a1.125 1.125 0 01-1.125-1.125M3.375 19.5h1.5C5.496 19.5 6 18.996 6 18.375m-3.75 0V5.625m0 12.75v-1.5c0-.621.504-1.125 1.125-1.125m18.375 2.625V5.625m0 12.75c0 .621-.504 1.125-1.125 1.125m1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125m0 3.75h-1.5A1.125 1.125 0 0118 18.375M20.625 4.5H3.375m17.25 0c.621 0 1.125.504 1.125 1.125M20.625 4.5h-1.5C18.504 4.5 18 5.004 18 5.625m3.75 0v1.5c0 .621-.504 1.125-1.125 1.125M3.375 4.5c-.621 0-1.125.504-1.125 1.125M3.375 4.5h1.5C5.496 4.5 6 5.004 6 5.625m-3.75 0v1.5c0 .621.504 1.125 1.125 1.125m0 0h1.5m-1.5 0c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125m1.5-3.75C5.496 8.25 6 7.746 6 7.125v-1.5M4.875 8.25C5.496 8.25 6 8.754 6 9.375v1.5m0-5.25v5.25m0-5.25C6 5.004 6.504 4.5 7.125 4.5h9.75c.621 0 1.125.504 1.125 1.125m1.125 2.625h1.5m-1.5 0A1.125 1.125 0 0118 7.125v-1.5m1.125 2.625c-.621 0-1.125.504-1.125 1.125v1.5m2.625-2.625c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125M18 5.625v5.25M7.125 12h9.75m-9.75 0A1.125 1.125 0 016 10.875M7.125 12C6.504 12 6 12.504 6 13.125m0-2.25C6 11.496 5.496 12 4.875 12M18 10.875c0 .621-.504 1.125-1.125 1.125M18 10.875c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125m-12 5.25v-5.25m0 5.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125m-12 0v-1.5c0-.621-.504-1.125-1.125-1.125M18 18.375v-5.25m0 5.25v-1.5c0-.621.504-1.125 1.125-1.125M18 13.125v1.5c0 .621.504 1.125 1.125 1.125M18 13.125c0-.621.504-1.125 1.125-1.125M6 13.125v1.5c0 .621-.504 1.125-1.125 1.125M6 13.125C6 12.504 5.496 12 4.875 12m-1.5 0h1.5m-1.5 0c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125M19.125 12h1.5m0 0c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h1.5m14.25 0h1.5" />
              </svg>
              <span class="text-sm font-semibold text-purple-300"><%= @pagy.count %> Episodes</span>
            </div>
            <div class="flex items-center gap-2 bg-gray-900/50 rounded-lg px-4 py-2">
              <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" />
              </svg>
              <span class="text-sm font-semibold text-blue-300"><%= format_bytes(@season.total_size_bytes) %></span>
            </div>
            <% if @season.contains_remux %>
              <span class="inline-flex items-center gap-1.5 rounded-lg bg-red-500/20 px-3 py-2 text-xs font-bold text-red-300 ring-1 ring-inset ring-red-500/30">
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
                CONTAINS REMUX
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Search Bar -->
  <div class="bg-gray-800/50 backdrop-blur rounded-xl p-6 border border-gray-700">
    <%= form_with url: show_season_path(@show, @season), method: :get, data: { turbo_frame: "episodes_list", controller: "auto-submit" } do |f| %>
      <div class="relative">
        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4">
          <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
          </svg>
        </div>
        <%= f.text_field(
              :q,
              value: @query,
              placeholder: "Search episodes by title...",
              data: { action: "input->debounce#search" },
              class: "block w-full pl-11 pr-4 py-3 rounded-lg bg-gray-900 border-2 border-gray-700 text-white placeholder-gray-500 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 hover:border-gray-600 transition-colors sm:text-sm",
            ) %>
      </div>
    <% end %>
  </div>

  <!-- Episodes Grid -->
  <%= turbo_frame_tag "episodes_list" do %>
    <% if @episodes.any? %>
      <div class="grid grid-cols-1 gap-4">
        <% @episodes.each do |episode| %>
          <div class="group relative overflow-hidden rounded-xl bg-gray-800 border border-gray-700 hover:border-purple-500 transition-all duration-200 shadow-lg hover:shadow-purple-500/10">
            <div class="p-6">
              <div class="flex items-start gap-6">
                <!-- Episode Number Badge -->
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center w-16 h-16 rounded-xl bg-gradient-to-br from-purple-600 to-indigo-600 shadow-lg">
                    <div class="text-center">
                      <div class="text-xs font-medium text-purple-200">EP</div>
                      <div class="text-lg font-bold text-white"><%= episode.episode_number %></div>
                    </div>
                  </div>
                </div>

                <!-- Episode Info -->
                <div class="flex-1 min-w-0">
                  <h3 class="text-xl font-bold text-white group-hover:text-purple-300 transition-colors mb-2">
                    <%= episode.title %>
                  </h3>

                  <div class="flex flex-wrap items-center gap-3 mt-3">
                    <div class="flex items-center gap-2 bg-gray-900/50 rounded-lg px-3 py-1.5">
                      <svg class="h-4 w-4 text-blue-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375" />
                      </svg>
                      <span class="text-sm font-semibold text-blue-300"><%= format_bytes(episode.size_bytes) %></span>
                    </div>

                    <div class="flex items-center gap-2 bg-gray-900/50 rounded-lg px-3 py-1.5">
                      <svg class="h-4 w-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
                      </svg>
                      <span class="text-sm font-semibold text-green-300"><%= episode.quality %></span>
                    </div>

                    <% if episode.is_remux %>
                      <span class="inline-flex items-center gap-1.5 rounded-lg bg-red-500/20 px-3 py-1.5 text-xs font-bold text-red-300 ring-1 ring-inset ring-red-500/30">
                        <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                        </svg>
                        REMUX
                      </span>
                    <% end %>
                  </div>

                  <% if episode.file_path.present? %>
                    <div class="mt-3 flex items-start gap-2 text-xs text-gray-500">
                      <svg class="h-4 w-4 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                      </svg>
                      <span class="break-all font-mono"><%= episode.file_path %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="mt-6">
          <%== pagy_tailwind_nav(@pagy, link_extra: 'data-turbo-frame="episodes_list"') %>
        </div>
      <% end %>
    <% else %>
      <div class="bg-gray-800/50 backdrop-blur rounded-xl border border-gray-700 p-12">
        <%= render "shared/empty_state",
              icon_type: "search",
              title: "No episodes found",
              message: "No episodes match your search criteria." %>
      </div>
    <% end %>
  <% end %>
</div>
